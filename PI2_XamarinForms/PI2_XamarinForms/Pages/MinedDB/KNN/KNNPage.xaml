<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PI2_XamarinForms.Pages.MinedDB.KNN.KNNPage"
             Title="KNN Operations Center">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="CharacterSpacing" Value="3"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Frame HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="1" Grid.Column="0"
               BorderColor="Purple" CornerRadius="10" HasShadow="True" IsClippedToBounds="True" Padding="30"
               Margin="10">
            <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" Padding="10" Spacing="10"
                         x:Name="StkMain">
                <Image Source="knn_plot.jpeg" Aspect="AspectFit"/>
                <Button Text="Check Data Used" Clicked="goKnnGraph"/>
                <Button Text="Check dataset dictionary" Clicked="goKnnDictionary"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>